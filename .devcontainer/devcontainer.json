{
  "name": "GroundAuth Development",
  "image": "mcr.microsoft.com/devcontainers/go:1.22",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go"
      ],
      "settings": {
        "go.toolsManagement.autoUpdate": true,
        "go.useLanguageServer": true
      }
    }
  },
  "postCreateCommand": "go install golang.org/x/tools/cmd/godoc@latest golang.org/x/tools/cmd/goimports@latest",
  "portsAttributes": {
    "443": {
      "label": "HTTPS",
      "visibility": "public"
    },
    "8080": {
      "label": "HTTP (redirects to HTTPS)",
      "visibility": "public"
    }
  }
}
